                <Grid
                Padding="20,50,20,0"
                HorizontalOptions="FillAndExpand"
                RowSpacing="20"
                VerticalOptions="FillAndExpand">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                       
                    </Grid.RowDefinitions>
                    <Label
                    Grid.Row="0"
                    FontAttributes="Bold"
                    FontSize="24"
                    HorizontalOptions="CenterAndExpand"
                    Text="Registration"
                    TextColor="#ffbd59" />
                    <Label
                    Grid.Row="1"
                    Margin="0,-15,0,0"
                    HorizontalOptions="CenterAndExpand"
                    Text="Register"
                    TextColor="#fff" />
                    <Entry
                    Grid.Row="2"
                    Margin="0,20,0,0"
                    HorizontalOptions="FillAndExpand"
                    Placeholder="Email"
                    Text="{Binding Email}"
                    VerticalOptions="FillAndExpand" />
                    <Entry
                    Grid.Row="3"
                    HorizontalOptions="FillAndExpand"
                    IsPassword="{Binding IsPasswordHidden, Mode=TwoWay}"
                    Placeholder="Password"
                    Text="{Binding Password}"
                    VerticalOptions="FillAndExpand" 
                    Keyboard="Chat"/>
            <Button x:Name="passwordToggleButton"
                    Grid.Row="3"
                    Grid.Column="1"
                    ImageSource="showpass.png"
                    BackgroundColor="#2b2b2b"                       
                    Command="{Binding ShowPasswordCommand}"
                    Scale="0.55"
                    HorizontalOptions="End"/>

            <Button
                    Grid.Row="4"
                    BackgroundColor="#ffbd59"
                    Command="{Binding RegisterUser}"
                    CornerRadius="20"
                    Text="Register" 
                    />


                     
                </Grid>
            <!--</Frame>
        </Grid>-->
    </ContentPage.Content>
</ContentPage>